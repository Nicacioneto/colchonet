<% if @room.errors.any? %>
  <div id="error_explanation">
    Existem erros no formul√°rio, por favor verifique
  </div>
<% end %>

<%= form_for @room do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
    <%= error_tag @room, :title %>
  </div>

  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
    <%= error_tag @room, :location %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
    <%= error_tag @room, :description %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
